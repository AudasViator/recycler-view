<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/content_item_text_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:layout_gravity="center"
              android:gravity="center"
              android:padding="30dp"
              android:textSize="42sp"/>

    <ImageView
        android:id="@+id/content_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/content_item_text_view"
        android:layout_alignLeft="@id/content_item_text_view"
        android:layout_alignRight="@id/content_item_text_view"
        android:layout_alignTop="@id/content_item_text_view"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"/>

</RelativeLayout>